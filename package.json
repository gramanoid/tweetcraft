{
  "name": "tweetcraft",
  "version": "0.0.12",
  "description": "AI-powered Twitter/X reply assistant with multiple tones and custom prompts",
  "scripts": {
    "build": "webpack --config build/webpack.prod.js",
    "dev": "webpack --config build/webpack.dev.js --watch",
    "clean": "rimraf dist",
    "lint": "eslint src --ext .ts,.tsx",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.8.0",
    "@types/chrome": "^0.0.268",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "husky": "^9.1.7",
    "jest": "^30.1.2",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "mini-css-extract-plugin": "^2.9.4",
    "rimraf": "^5.0.10",
    "sass": "^1.91.0",
    "sass-loader": "^14.2.1",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.10.0"
  }
}
