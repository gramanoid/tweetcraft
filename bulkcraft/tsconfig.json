{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@types": ["types/index"],
      "@config/*": ["config/*"],
      "@llm/*": ["llm/*"],
      "@analysis/*": ["analysis/*"],
      "@generation/*": ["generation/*"],
      "@research/*": ["research/*"],
      "@psychology/*": ["psychology/*"],
      "@controls/*": ["controls/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}