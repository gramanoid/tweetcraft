{
  "name": "TweetCraft",
  "description": "AI-powered Twitter/X reply assistant with multiple tones and custom prompts",
  "version": "0.0.15.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://app.hypefury.com/*"
      ],
      "js": ["contentScript.js"],
      "css": ["contentScript.css"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "https://openrouter.ai/*"
  ],
  "options_page": "config.html",
  "action": {
    "default_title": "Smart Reply Settings",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16.png",
      "19": "icons/icon_19.png",
      "24": "icons/icon_24.png",
      "32": "icons/icon_32.png",
      "38": "icons/icon_38.png",
      "48": "icons/icon_48.png",
      "64": "icons/icon_64.png",
      "128": "icons/icon_128.png"
    }
  },
  "icons": {
    "16": "icons/icon_16.png",
    "19": "icons/icon_19.png",
    "24": "icons/icon_24.png",
    "32": "icons/icon_32.png",
    "38": "icons/icon_38.png",
    "48": "icons/icon_48.png",
    "64": "icons/icon_64.png",
    "128": "icons/icon_128.png",
    "256": "icons/icon_256.png",
    "512": "icons/icon_512.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "*.js",
        "*.css",
        "content/*",
        "utils/*",
        "services/*",
        "config/*",
        "ui/*",
        "platforms/*",
        "types/*"
      ],
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://app.hypefury.com/*"
      ]
    }
  ]
}
